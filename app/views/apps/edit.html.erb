<h1 align="center">Edit existing apps</h1>


<% if @app.errors.any? %>
<ul>
 <% @app.errors.full_messages.each do |msg| %>
 <li><%= msg %> </li>
 <% end %>
</ul>

<% end %>


<%= form_for @app do |f| %>
<p>
    <%= f.label :app_name %><br>
    <%= f.text_field :app_name %>

</p>

<p>
    <%= f.label :remarks %><br>
    <%= f.text_area :remarks %>
</p>

<p>
<%= f.submit %>
</p>

<%= link_to "Back to application listing", apps_path %>

<% end %>
