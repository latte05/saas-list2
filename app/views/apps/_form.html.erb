<%= render 'shared/errors', obj: @app %>


<div class='row'>
  <div class='container'>
  <div class='col-xs-12'>
    <%= form_for(@app,:html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
              <%= f.label :app_name, 'Application Name' %>
        </div>
        <div class="col-sm-8">
              <%= f.text_field :app_name, class: "form-control", placeholder: "App name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
              <%= f.label :remarks, 'Remarks' %>
         </div>
         <div class="col-sm-8">
              <%= f.text_area :remarks, rows: 10, class: "form-control", placeholder: "Remarks", autofocus: true %>
         </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
              <%= f.label :req_latency, 'Latency (ms)' %>
         </div>
         <div class="col-sm-8">
              <%= f.text_field :req_latency, rows: 10, class: "form-control", placeholder: "ms", autofocus: true %>
         </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
              <%= f.label :req_jitter, "Jitter (ms)" %>
         </div>
         <div class="col-sm-8">
              <%= f.text_field :req_jitter, rows: 10, class: "form-control", placeholder: "ms", autofocus: true %>
         </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
              <%= f.label :req_packet_drop, "Packet Drop (%)" %>
         </div>
         <div class="col-sm-8">
              <%= f.text_field :req_packet_drop, rows: 10, class: "form-control", placeholder: "%", autofocus: true %>
         </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
              <%= f.label :req_bw,"Bandwidth" %>
         </div>
         <div class="col-sm-8">
              <%= f.text_field :req_bw, rows: 10, class: "form-control", placeholder: "bandwidth", autofocus: true %>
         </div>
      </div>


          <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: 'btn btn-primary btn-lg'%>
              </div>
          </div>
          <% end %>

        <div class="col-xs-4 col-xs-offset-4">
         [ <%= link_to "Back to application listing", apps_path %> ]
       </div>

     </div>
   </div>
 </div>
