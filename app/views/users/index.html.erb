<h1 align="center">All Subscribed Users</h1>

<div align="center">
  <% @users.each do |user| %>
    <ul class="user_listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="app-title">
              <%= link_to user.username, user_path(user) %>
            </li>
              <li><small><%= pluralize(user.apps.count, "app") if user.apps %></small></li>
      </div>
    </div>
  </ul>
  <% end %>
</div>

<div class="row">
  <div class="container">
      <table class="table table-hover table-striped">
         <thead>
           <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>Picture</th>
            <th>App Count</th>
           </tr>
         </thead>

          <tbody>
          <% @users.each do |user| %>
             <tr>
                  <td><%= user.id %></td>
                  <td><%= link_to user.username, user_path(user) %></td>
                  <td><%= link_to gravatar_for(user,:size=>'40'), user_path(user) %> </td>
                  <td><%= pluralize(user.apps.count, "app") if user.apps %> </td>
                  <td><%= link_to "Edit" , edit_user_path(user) %></td>
                  <td><%= link_to 'Show', user_path(user) %></td>
                  <td><%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Are you sure?"} %></td>
             </tr>
           <% end %>
            </tbody>
          </table>
  </div>
</div>
